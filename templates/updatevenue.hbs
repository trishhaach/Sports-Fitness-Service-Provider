<!-- updatevenue.hbs -->
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

<style>
    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
  background-color: #f4f4f4;
}

h2 {
  text-align: center;
}

form {
  max-width: 500px;
  margin: 0 auto;
}

label {
  display: block;
  margin-bottom: 5px;
}

input[type="text"],
input[type="email"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button[type="submit"] {
  background-color: #4caf50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  display: block;
  margin: 20px auto 0;
}

button[type="submit"]:hover {
  background-color: #45a049;
}
a {
  text-decoration: none;
  color: #333;
  margin-right: 10px;
}
</style>    
<title>Update Venue</title>
</head>
<body>
    <h2>Update Venue</h2>     <a href="/vendorhome">Go back to Home</a>
    <form action="/update-venue" method="POST">
        <input type="hidden" name="venueId" value="{{venue._id}}">
        <label for="ownerName">Owner Name:</label>
        <input type="text" id="ownerName" name="ownerName" value="{{venue.ownerName}}" required><br>
        <label for="venueName">Venue Name:</label>
        <input type="text" id="venueName" name="venueName" value="{{venue.venueName}}" required><br>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="{{venue.address}}" required><br>
        <label for="contact">Contact:</label>
        <input type="text" id="contact" name="contact" value="{{venue.contact}}" required><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{venue.email}}" required><br>
        <label for="services">Services:</label>
        <input type="text" id="services" name="services" value="{{venue.services}}" required><br>
        <label for="openingtime">Opening Time:</label>
        <input type="text" id="openingtime" name="openingtime" value="{{venue.openingtime}}" required><br>
        <label for="closingtime">Closing Time:</label>
        <input type="text" id="closingtime" name="closingtime" value="{{venue.closingtime}}" required><br>
      <button type="submit">Update Venue</button>
    </form>
     
</body>
</html>
